    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "${input:day}"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "day",
            "description": "Which day do you want to run?",
            "options": [
                "All days",
                "day_1",
                "day_2",
                "day_3",
                "day_4",
                "day_5",
                "day_6",
                "day_7",
                "day_8",
                "day_9",
                "day_10",
                "day_11",
                "day_12",
                "day_13",
                "day_14",
                "day_15",
                "day_16",
                "day_17",
                "day_18",
                "day_19",
                "day_20",
                "day_21",
                "day_22",
                "day_23",
                "day_24",
            ],
            "default": "All days"
        },
    ]
}